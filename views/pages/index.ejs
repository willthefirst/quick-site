<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
  <main class="wrapper">
    <div class="code-container">
      <section class="editor">
        <h2 class="editor-name">HTML
          <button type="button" id="refresh" name="button">SAVE</button></h2>
          <input type="text" name="subdomain" id="site-subdomain" value="<%= subdomain %>">
        <div id="editor-html" data-currentCode="<%= htmlCode %>"></div>
      </section>
      <section class="editor">
        <h2 class="editor-name">CSS</h2>
        <div id="editor-css" data-currentCode="<%= cssCode %>"></div>
      </section>
      <section class="editor">
        <h2 class="editor-name">Javascript</h2>
        <div id="editor-javascript" data-currentCode="<%= jsCode %>"></div>
      </section>
    </div>
    <div class="result-container">
      <iframe id="result" src="<%= resultURL %>"></iframe>
    </div>
  </main>
</body>
</html>
